<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                    http://www.springframework.org/schema/security 
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">
                    
                    <!-- proxy target class needs to be false to switch of cglib proxies, as they cannot be used
	with request scoped ConnectionRepository.  Unfortunately proxy-target-class=true is needed for secured annotations to be honoured -->
	<global-method-security proxy-target-class="false" >
	</global-method-security>
	
	<!-- Http config which has custom entry point.  Notice that there is no form login -->
    <http auto-config="false" use-expressions="true" disable-url-rewriting="true" entry-point-ref="authenticationEntryPoint"  >
    	<intercept-url pattern="/signin/**" access="permitAll" />
    	<intercept-url pattern="/popuphandler" access="permitAll" />
        <intercept-url pattern="/**" access="hasRole('ROLE_USER')" />
        <logout logout-url="/signout" invalidate-session="true" logout-success-url="/signin" />
        <custom-filter position="FORM_LOGIN_FILTER" ref="springSocialSecurityAuthenticationFilter" />
   </http>
   
    <beans:bean id="authenticationEntryPoint"  class="org.springframework.security.web.authentication.LoginUrlAuthenticationEntryPoint"> 
    	<beans:constructor-arg name="loginFormUrl"  value="/signin"/>
	</beans:bean>

    <authentication-manager alias="authenticationManager" >
     </authentication-manager>
     
     <bean id="accessDecisionManager" class="org.springframework.security.access.vote.UnanimousBased"
		xmlns="http://www.springframework.org/schema/beans">
		<constructor-arg>
			<list>
				<bean class="org.springframework.security.access.vote.RoleVoter" />
				<bean class="org.springframework.security.access.vote.AuthenticatedVoter" />
			</list>
		</constructor-arg>
	</bean>
     
    
	
</beans:beans> 